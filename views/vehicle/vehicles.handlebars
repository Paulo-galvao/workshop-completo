<h2>Controle de Veículos</h2>

<form action="/vehicle/add" method="post" class="veh-form">
    <label for="model">Modelo: </label>
    <input type="text" name="model" placeholder="Digite o modelo do veículo">
    <label for="plate">Placa: </label>
    <input type="text" name="plate" placeholder="Digite a placa do veículo">
    <label for="year">Ano: </label>
    <input type="text" name="year" placeholder="Digite o ano do veículo">
    <label for="owner">Proprietário: </label>
    <input type="text" name="owner" placeholder="Digite o proprietário do veículo">

    <button type="submit" class="btn-send">Enviar</button>
    <a class="btn-send btn-link" href="/">Voltar</a>

</form>

<table>
    <thead>
        <tr>
            <th>Modelo</th>
            <th>Placa</th>
            <th>Ano</th>
            <th>Proprietário</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        {{#each vehicles}}
        <tr>
            <td>{{model}}</td>
            <td>{{plate}}</td>
            <td>{{year}}</td>
            <td>{{owner}}</td>
            <td class="options">
                <a href="/vehicle/edit/{{_id}}"><button class="edit" ><i class='bx bxs-edit-alt'></i></button></a>
                <a href="/vehicle/delete/{{_id}}"><button class="delete"><i class='bx bx-trash-alt'></i></button></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>